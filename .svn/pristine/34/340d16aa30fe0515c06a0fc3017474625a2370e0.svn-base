<ion-header-bar align-title="center" class="bar-positive">
    <h1 class="title">每日签到</h1>
</ion-header-bar>
<ion-view>
    <ion-content overflow-scroll="false">
       
        <div class="list">
            <div class="item item-divider">未读信息</div>
            <div ng-click="ShowArticle(item)" ng-repeat="item in ListArticle" class="item item-avatar item-avatar-none">
                <h2>{{item.Title}}</h2>
                <p class="fl">上传单位：{{item.Auth}}</p>
                <p class="fr">{{item.AddDate}}</p>
            </div>
            <div ng-show="ListArticle.length < 1" class="item f-dark">
                暂无数据
            </div>
        </div>

        <div class="blank-h10"></div>

        <div class="circle-daily">
            <div class="row" ng-repeat="item in ListCircleDaily">
                <div class="col" ng-repeat="subItem in item.RowData"><i class="icon ion-ios-circle-filled" ng-class="subItem.Style" ng-hide="subItem.IsHide"></i></div>
            </div>
        </div>

        <div class="pd10 tac">本月已累计签到<span class="f-cr">{{TotalSign}}</span>天 </div>

        <div class="padding item item-divider">
            <button class="button button-full button-positive" ng-click="doSign()">
                签到
            </button>
        </div>

    </ion-content>
</ion-view>