
<ion-header-bar align-title="center" class="bar-positive">
    <div class="buttons">
        <button class="button button-icon ion-ios-arrow-thin-left" ng-click="$ionicGoBack()"></button>
    </div>
    <h1 class="title">出租发布</h1>
</ion-header-bar>
<ion-view>
    <ion-content overflow-scroll="false" class="info-fm row-border-b">

        <div class="row">
            <div class="col col-25"><span class="f-title">出租标题：</span></div>
            <div class="col col-75">
                <input type="text" placeholder="请输入出租的标题" ng-model="msg.title" ng-readonly="msg.IsShow" />
            </div>
        </div>
        <div class="row">
            <div class="col col-25"><span class="f-title">出租简介：</span></div>
            <div class="col col-75">
                <input type="text" placeholder="请输入出租的简介" ng-model="msg.detail" ng-readonly="msg.IsShow"  />
            </div>
        </div>
        <div class="row">
            <div class="col col-25"><span class="f-title">出租价位：</span></div>
            <div class="col col-75">
                <input type="text" placeholder="请输入出租价格,单位:元/天" ng-model="msg.price" ng-readonly="msg.IsShow"  />
            </div>
        </div>
        <div class="row">
            <div class="col col-25"><span class="f-title">起始时间：</span></div>
            <div class="col col-75" ng-click="selectType()">
                <input type="date" placeholder="起始出租时间(2016年)" ng-model="msg.datefrom" ng-readonly="msg.IsShow"  />
            </div>
        </div>
        <div class="row">
            <div class="col col-25"><span class="f-title">结束时间：</span></div>
            <div class="col col-75" ng-click="selectType()">
                <input type="date" placeholder="结束出租时间(2016年)" ng-model="msg.dateto" ng-readonly="msg.IsShow" />
            </div>
        </div>
        <div class="row">
            <div class="col col-25"><span class="f-title">出租地区：</span></div>
            <div class="col col-75" ng-click="selectType()">
                <input type="text" placeholder="请输入出租地区" ng-model="msg.area" ng-readonly="msg.IsShow"  />
            </div>
        </div>
        <div class="row">
            <div class="col col-25"><span class="f-title">农机型号：</span></div>
            <div class="col col-75">
                <input type="text" placeholder="输入特别的机器要求" ng-model="msg.model" ng-readonly="msg.IsShow"  />
            </div>
        </div>

