        <div class="padding item item-divider" style="padding-top:20px;">
            <div class="mine-portarit" ng-repeat="item in picArr">
                <img ng-src="{{item}}" ng-click="getImg(item)" />
                <a ng-click="cancelImg(item)" ng-hide="msg.IsShow">X</a>
            </div>
            <div class="mine-portarit">
                <img src="img/addportrait.png" ng-click="showImgPop()" ng-hide="msg.IsShow">
            </div>
        </div>
        <div class="padding">
            <button class="button button-full button-positive" ng-click="comfirm()" ng-hide="msg.IsShow">发布</button>
        </div>
        
    </ion-content>
</ion-view>

<div style="background-color: black;position: fixed;width: 100%;height: 100%;left: 0;top: 0;z-index: 10;" ng-if="imgSrc" ng-click="clearImg()">
    <img style="position: absolute;width: 100%;max-height: 100%;height: auto;margin: auto;top: 0;left: 0;bottom: 0;right: 0;" src="{{imgSrc}}" ng-if="imgSrc" ng-click="clearImg()">
</div>
