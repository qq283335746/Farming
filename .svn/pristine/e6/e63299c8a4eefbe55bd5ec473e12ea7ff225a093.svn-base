<ion-header-bar align-title="center" class="bar-positive">
    <div class="buttons">
        <button class="button button-icon ion-ios-arrow-thin-left" ng-click="$ionicGoBack()"></button>
    </div>
    <h1 class="title">{{ModelData.Title}}</h1>
</ion-header-bar>
<ion-view>
    <ion-content>
        <div class="row">
            <div class="col"><h4>{{ModelData.Title}}</h4></div>
        </div>
        <div class="row">
            <div class="col">{{ModelData.CreateDate}}</div>
            <div class="col"><span class="fr">来源：{{ModelData.Auth}}</span></div>
        </div>
        <div class="row">
            <div ng-bind-html="ModelData.Content" class="col content"></div>
        </div>

    </ion-content>

</ion-view>