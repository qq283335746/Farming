<ion-header-bar align-title="center" class="bar-positive">
    <div class="buttons">
        <button class="button button-icon ion-ios-arrow-thin-left" ng-click="$ionicGoBack()"></button>
    </div>
    <h1 class="title">青年之声</h1>
    <div class="buttons" ng-click="onSave()">
        <a class="button button-clear">发表</a>
    </div>
</ion-header-bar>
<ion-view>
    <ion-content overflow-scroll="false">

        <div class="list">
            <label class="item item-input">
                <input type="text" ng-model="FmData.Title" placeholder="请输入标题">
            </label>
            <label class="item item-input">
                <textarea ng-model="FmData.Content" placeholder="请输入内容" class="txta69"></textarea>
            </label>
        </div>
        <div class="padding item item-divider">
            <div class="mine-portarit" ng-repeat="item in picArr">
                <img ng-src="{{item}}">
                <a ng-click="cancelImg(item)">X</a>
            </div>
            <div class="mine-portarit">
                <img src="img/addportrait.png" ng-click="showImgPop()">
            </div>
        </div>
    </ion-content>
</ion-view>